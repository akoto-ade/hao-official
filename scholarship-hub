        function filterScholarships() {
            const level = document.getElementById('levelFilter').value.toLowerCase();
            const location = document.getElementById('locationFilter').value.toLowerCase();
            const region = document.getElementById('regionFilter').value.toLowerCase();
            const search = document.getElementById('searchInput').value.toLowerCase();

            const filtered = scholarships.filter(s => {
                const matchLevel = !level || s.level.some(l => l.includes(level));
                const matchLocation = !location || s.location === location;
                const matchRegion = !region || s.region === region;
                const matchSearch = !search || s.name.toLowerCase().includes(search) || 
                                    s.description.toLowerCase().includes(search);
                
                return matchLevel && matchLocation && matchRegion && matchSearch;
            });

            displayScholarships(filtered);
        }

        function displayScholarships(scholarshipList) {
            const container = document.getElementById('scholarshipResults');
            
            if (scholarshipList.length === 0) {
                container.innerHTML = `
                    <div class="no-results">
                        <h3>No scholarships found</h3>
                        <p>Try adjusting your filters or search terms</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = scholarshipList.map(s => `
                <div class="scholarship-card">
                    <div class="scholarship-header">
                        <div>
                            <h3 class="scholarship-title">${s.name}</h3>
                            ${s.priority.includes('‚≠ê') ? `
                                <div class="highlight-box">
                                    <strong>${s.priority}</strong>
                                </div>
                            ` : ''}
                        </div>
                        <div style="text-align: right;">
                            <span class="scholarship-badge badge-${s.location}">
                                ${s.location === 'local' ? 'üá¨üá≠ Local' : 'üåç Study Abroad'}
                            </span>
                        </div>
                    </div>
                    
                    <div class="scholarship-info">
                        <div class="info-row">
                            <span class="info-label">Level:</span>
                            <span class="info-value">${s.level.map(l => l.charAt(0).toUpperCase() + l.slice(1)).join(', ')}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Deadline:</span>
                            <span class="info-value">${s.deadline}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Coverage:</span>
                            <span class="info-value">${s.coverage}</span>
                        </div>
                        ${s.priority && !s.priority.includes('‚≠ê') ? `
                            <div class="info-row">
                                <span class="info-label">Priority:</span>
                                <span class="info-value">${s.priority}</span>
                            </div>
                        ` : ''}
                    </div>
                    
                    <p class="scholarship-description">${s.description}</p>
                    
                    <a href="${s.link}" target="_blank" class="btn-apply">
                        Learn More & Apply ‚Üí
                    </a>
                </div>
            `).join('');
        }

        // Initial display
        displayScholarships(scholarships);
    </script>
